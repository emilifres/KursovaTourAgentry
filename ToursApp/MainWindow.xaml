<Window x:Class="ToursApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Avaizons" Height="600" Width="1000"
        Icon="/resourcer/tour.ico"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#FFEFEFEF" Grid.Column="0">
            <TextBlock Text="Меню" FontWeight="Bold" Margin="10"/>
            <Button x:Name="ToursButton" Content="Туры" Click="Tours_Click" Margin="10" Background="#FFE8936A"/>
            <Button x:Name="ClientButton" Content="Клиенты" Click="Client_Click" Margin="10" Background="#FFE8936A"/>
            <Button x:Name="HotelButton" Content="Отели" Click="Hotel_Click" Margin="10" Background="#FFE8936A"/>
            <Button x:Name="ReportsButton" Content="Отчеты" Click="Reports_Click" Margin="10" Background="#FFE8936A"/>
            <Button x:Name="EmployeesButton" Content="Сотрудники" Click="Employees_Click" Margin="10" Background="#FFE8936A"/>
            <Button x:Name="LogoutButton" Content="Выход" Margin="10" Click="Logout_Click" Background="#FFE8936A"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>